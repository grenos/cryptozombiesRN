{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "types": ["node"],
        "paths": {
            "~*": ["./src/*"],
            "~Storage/*": ["./src/Storage/*"],
            "~Screens/*": ["./src/Screens/*"],
            "~Navigation/*": ["./src/Navigation/*"],
            "~Utils/*": ["./src/Utils/*"],
            "~Components/*": ["./src/Components/*"],
            "~Api/*": ["./src/Api/*"],
            "~Types/*": ["./src/Types/*"]
        }
    }
}
